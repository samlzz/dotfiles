{
  "extensions.autoUpdate": true,
  // ts / tsx
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.emmetCompletions": true,
  "makefile.configureOnOpen": true,
  "C_Cpp.formatting": "disabled",
  "C_Cpp.vcFormat.indent.preserveComments": true,
  "C_Cpp.codeAnalysis.clangTidy.codeAction.formatFixes": false,
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.default.cppStandard": "c++98",
  // py
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultColorDecorators": "always"
  },
  "basedpyright.analysis.diagnosticSeverityOverrides": {
    "reportAny": false,
    "reportExplicitAny": false,
    "reportImplicitRelativeImport": "information",
    "reportUnreachable": "none",
    "reportUnusedCallResult": "none"
  },
  // editor
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.renderWhitespace": "boundary",
  "editor.detectIndentation": false,
  "editor.indentSize": "tabSize",
  "workbench.settings.applyToAllProfiles": [
    "editor.formatOnSave",
    "editor.formatOnPaste"
  ],
  "security.workspace.trust.untrustedFiles": "open",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "basedpyright.analysis.typeCheckingMode": "off",
  "terminal.integrated.inheritEnv": false,
  "editor.insertSpaces": false,
  "editor.useTabStops": false,
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "workbench.editor.empty.hint": "hidden",
  "workbench.colorTheme": "Alt Catppuccin Mocha",
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "workbench.iconTheme": "catppuccin-macchiato",
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "extensions.ignoreRecommendations": true,
  "search.followSymlinks": true,
  "gitlens.graph.minimap.enabled": false,
  "gitlens.views.commitDetails.files.layout": "tree",
  "gitlens.ai.model": "gitkraken",
"gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash",
"files.associations": {
	"*.h": "c"
},
"clangd.checkUpdates": true,
"clangd.arguments": [
],
"clangd.path": "/home/sliziard/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/21.1.0/clangd_21.1.0/bin/clangd",
"explorer.confirmDelete": false
}
